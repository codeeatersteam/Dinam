<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="@dimen/cardview_default_elevation"
    android:layout_margin="@dimen/fab_margin"
    android:layout_marginTop="@dimen/fab_margin">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/typetxt"
                android:textStyle="normal|bold"
                android:textColor="@color/Red_900"
                android:textSize="14sp"
                android:layout_gravity="left"
                android:layout_marginTop="@dimen/fab_margin"
                android:layout_marginLeft="@dimen/fab_margin"/>

            <TextView
                android:text="Diplome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/iddiplometxt"
                android:textStyle="normal|bold"
                android:layout_marginTop="@dimen/fab_margin"
                android:textColor="@color/Blue_600"
                android:layout_marginRight="@dimen/fab_margin"
                android:textSize="14sp"
                android:layout_gravity="right"/>

        </FrameLayout>





        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_person"
            android:layout_marginTop="@dimen/fab_margin"
            android:layout_marginLeft="@dimen/fab_margin"
            android:scaleType="centerCrop"
            android:background="@color/Red_600"/>




            <TextView
                android:text="Poste"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/postetxt"
                android:layout_marginLeft="@dimen/fab_margin"
                android:layout_marginTop="@dimen/fab_margin"
                android:textColor="@color/Grey_600"
                android:layout_marginRight="@dimen/fab_margin"/>
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_money"
            android:layout_marginTop="@dimen/fab_margin"
            android:layout_marginLeft="@dimen/fab_margin"
            android:scaleType="centerCrop"
            android:background="@color/Red_600"/>

            <TextView
                android:text="Salaire"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/fab_margin"
                android:layout_marginLeft="@dimen/fab_margin"
                android:id="@+id/salairetxt"
                android:textColor="@color/Grey_600"
                android:layout_marginRight="@dimen/fab_margin"/>
        </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_phone"
            android:layout_marginTop="@dimen/fab_margin"
            android:layout_marginLeft="@dimen/fab_margin"
            android:scaleType="centerCrop"
            android:background="@color/Red_600"/>

            <TextView
                android:text="Contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/contacttxt"
                android:layout_marginLeft="@dimen/fab_margin"
                android:layout_marginTop="@dimen/fab_margin"
                android:textColor="@color/Grey_600"
                android:layout_marginRight="@dimen/fab_margin"/>
        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_event"
                    android:layout_marginTop="@dimen/fab_margin"
                    android:layout_marginLeft="@dimen/fab_margin"
                    android:scaleType="centerCrop"
                    android:background="@color/Red_600"/>

                <TextView
                    android:text="Date de debut et de fin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/dateoffretxt"
                    android:layout_marginLeft="@dimen/fab_margin"
                    android:layout_marginTop="@dimen/fab_margin"
                    android:textColor="@color/Grey_600"
                    android:layout_marginRight="@dimen/fab_margin"/>

                <TextView
                    android:text="IDENTIFIANT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/idoffretxt"
                    android:layout_marginLeft="@dimen/fab_margin"
                    android:layout_marginTop="@dimen/fab_margin"
                    android:textColor="@color/Grey_600"
                    android:visibility="invisible"
                    android:layout_marginRight="@dimen/fab_margin"/>
            </LinearLayout>




            <TextView
                android:text="Domaine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/domainetxt"
                android:textColor="@color/Blue_600"
                android:layout_margin="@dimen/fab_margin"
                android:textSize="14sp"
                android:textStyle="normal|bold"/>


        </LinearLayout>




</android.support.v7.widget.CardView>