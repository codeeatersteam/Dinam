<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="@dimen/cardview_default_elevation"
    android:layout_marginTop="@dimen/fab_margin">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">



            <ImageView
                android:layout_width="150dp"
                android:layout_height="250dp"
                android:layout_gravity="left"
                android:scaleType="centerCrop"
                android:id="@+id/imagelieu"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="160dp"
                >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_building"
                    android:layout_marginTop="@dimen/appbar_padding_top"
                    android:scaleType="centerCrop"
                    android:background="@color/colorPrimary"/>
            <TextView
                android:text="Type Lieu Reference"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/typelieu"
                android:textStyle="normal|bold"
                android:textColor="@color/Red_600"
                android:textSize="14sp"
                android:layout_marginTop="@dimen/appbar_padding_top"
                android:layout_marginLeft="@dimen/appbar_padding_top"
                />
                </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_tower"
                    android:layout_marginTop="@dimen/fab_margin"
                    android:scaleType="centerCrop"
                    android:background="@color/colorPrimary"/>


            <TextView
                android:text="Nom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/nomlieu"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/appbar_padding_top"
                android:layout_marginTop="@dimen/fab_margin"
                android:textColor="@color/Blue_600"/>
</LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_place"
                    android:layout_marginTop="@dimen/fab_margin"
                    android:scaleType="centerCrop"
                    android:background="@color/colorPrimary"/>

            <TextView
                android:text="Adresse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/adresselieu"
                android:layout_marginTop="@dimen/fab_margin"
                android:layout_marginLeft="@dimen/appbar_padding_top"
                android:textSize="12sp"/>
                </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_phone"
                    android:layout_marginTop="@dimen/fab_margin"
                    android:scaleType="centerCrop"
                    android:background="@color/colorPrimary"/>

            <TextView
                android:text="Contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/contactlieu"
                android:layout_marginTop="@dimen/fab_margin"
                android:layout_marginLeft="@dimen/appbar_padding_top"/>

                </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_web"
                    android:layout_marginTop="@dimen/fab_margin"
                    android:scaleType="centerCrop"
                    android:background="@color/colorPrimary"/>
            <TextView
                android:text="www.dinamtogo.com"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/fab_margin"
                android:textSize="12dp"
                android:layout_marginLeft="@dimen/appbar_padding_top"
                android:id="@+id/sitelieu"/>

                <TextView
                    android:text="id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/idLieutxt"
                    android:layout_marginLeft="@dimen/fab_margin"
                    android:layout_marginTop="@dimen/fab_margin"
                    android:textColor="@color/Grey_600"
                    android:visibility="invisible"
                    android:layout_marginRight="@dimen/fab_margin"/>


                </LinearLayout>

            </LinearLayout>





        </FrameLayout>

</android.support.v7.widget.CardView>