<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_lire_offre"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.codeeatersteam.dinam.ui.LireOffre"
    android:background="@color/Grey_500">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">



        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="@dimen/cardview_default_elevation">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">



                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:text="Domaine"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/domainelectureoffre"
                            android:textColor="@color/Blue_900"
                            android:layout_margin="@dimen/fab_margin"
                            android:textSize="14sp"
                            android:textStyle="normal|bold"/>
                        <TextView
                            android:text="Diplome"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/diplomelectureoffre"
                            android:textColor="@color/Blue_900"
                            android:layout_margin="@dimen/fab_margin"
                            android:textSize="14sp"
                            android:textStyle="normal|bold"
                            android:layout_gravity="right"/>

                    </FrameLayout>




                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">




                    <TextView
                        android:text="Type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/typelectureoffre"
                        android:textStyle="normal|bold"
                        android:textColor="@color/Red_900"
                        android:textSize="14sp"
                        android:layout_marginTop="@dimen/fab_margin"
                        android:layout_marginLeft="@dimen/fab_margin"
                        android:layout_marginRight="@dimen/fab_margin"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_person"
                        android:layout_marginTop="@dimen/fab_margin"
                        android:layout_marginLeft="@dimen/fab_margin"
                        android:scaleType="centerCrop"
                        android:background="@color/Red_600"/>




                    <TextView
                        android:text="Poste"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/postelectureoffretxt"
                        android:layout_marginLeft="@dimen/fab_margin"
                        android:layout_marginTop="@dimen/fab_margin"
                        android:textColor="@color/Grey_600"
                        android:layout_marginRight="@dimen/fab_margin"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_money"
                        android:layout_marginTop="@dimen/fab_margin"
                        android:layout_marginLeft="@dimen/fab_margin"
                        android:scaleType="centerCrop"
                        android:background="@color/Red_600"/>

                    <TextView
                        android:text="Salaire"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/fab_margin"
                        android:layout_marginLeft="@dimen/fab_margin"
                        android:id="@+id/salairelecureoffretxt"
                        android:textColor="@color/Grey_600"
                        android:layout_marginRight="@dimen/fab_margin"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">


                    <TextView
                        android:text="Descripition"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/descriptionlectureoffre"
                        android:layout_marginLeft="@dimen/fab_margin"
                        android:layout_marginTop="@dimen/fab_margin"
                        android:textColor="@color/Grey_600"
                        android:layout_marginRight="@dimen/fab_margin"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_phone"
                        android:layout_marginTop="@dimen/fab_margin"
                        android:layout_marginLeft="@dimen/fab_margin"
                        android:scaleType="centerCrop"
                        android:background="@color/Red_600"/>

                    <TextView
                        android:text="Contact"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/contactlectureoffretxt"
                        android:layout_marginLeft="@dimen/fab_margin"
                        android:layout_marginTop="@dimen/fab_margin"
                        android:textColor="@color/Grey_600"
                        android:layout_marginRight="@dimen/fab_margin"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_event"
                        android:layout_marginTop="@dimen/fab_margin"
                        android:layout_marginLeft="@dimen/fab_margin"
                        android:scaleType="centerCrop"
                        android:background="@color/Red_600"/>

                    <TextView
                        android:text="Date de debut"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/datelectureoffretxt"
                        android:layout_margin="@dimen/fab_margin"
                        android:textColor="@color/Grey_600"/>
                </LinearLayout>






            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>
    </ScrollView>

</LinearLayout>
